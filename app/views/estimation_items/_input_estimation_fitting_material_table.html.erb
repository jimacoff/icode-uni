<div style="float: right;"><%= will_paginate @show_fitting_material %></div>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>No.</th>
			<th></th>
			<th>Name</th>
			<th>Material Code</th>
			<th>Remark</th>
			<th>Price</th>
		</tr>
	</thead>
	<% @show_fitting_material.each_with_index do |fitting, index| %>
	<tbody>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= button_tag "Load", :es_ma => fitting.id ,
            :class=>"btn btn-mini fitting_material_estimation_button" %></td>
			<td id="<%= "name_#{fitting.id}" %>"><%= fitting.name %></td>
			<td id="<%= "material_code_#{fitting.id}" %>"><%= fitting.material_code rescue'-' %></td>
			<% a = fitting.price_control_items.where("new_eff_date <= ?" , Date.today).order("new_eff_date").first %>
			<td><%= fitting.remark rescue'-'%></td>
			<td  id="<%= "unit_price_#{fitting.id}" %>"><%= a.new_unit_price rescue'-' %></td>
		</tr>
		<% end %>
	</tbody>
	
</table>
