<h3>Excel File</h3>
<%#= form_tag @profile, {:action => "save_file"} do %>
<!-- below link is take record to where -->
<%= form_tag("/spreadsheets/save_fitting_material_file", method: "post") do %>
<%= submit_tag "import excel" , :class => "btn" %>
<table class="table table-border">
	<thead>
		<tr>
			<th>No</th>
			<th></th>
			<th>Name</th>
			<th>thk/dia</th>
			<th>brand</th>
			<th>model</th>
			<th>type</th>
			<th>pump capacity</th>
			<th>head</th>
			<th>material type</th>
			<th>pump speed</th>
			<th>fan speed</th>
			<th>motor speed</th>
			<th>motor pole</th>
			<th>air flow</th>
			<th>static pressure</th>
			<th>other</th>
			<th>remark</th>
		</tr>
	</thead>
	
	<tbody>
		<% @fitting_material.each_with_index do |row, index | %>
		<tr>
			<td><%= a = index + 1 %></td>
			<td><%#= check_box_tag "row[#{a}][]" %></td>
			<td><%= text_field_tag "row[#{a}][name]", '', :value => row[1] %></td>
			<td><%= text_field_tag "row[#{a}][thk_dia]", '', :value => row[2] %></td>
			<td><%= text_field_tag "row[#{a}][brand]", '', :value => row[3] %></td>
			<td><%= text_field_tag "row[#{a}][modal]", '', :value => row[4] %></td>
			<td><%= text_field_tag "row[#{a}][type_1]", '', :value => row[5] %></td>
			<td><%= text_field_tag "row[#{a}][pump_capacity]", '', :value => row[6] %></td>
			<td><%= text_field_tag "row[#{a}][head]", '', :value => row[7] %></td>
			<td><%= text_field_tag "row[#{a}][material_type]", '', :value => row[8] %></td>
			<td><%= text_field_tag "row[#{a}][pump_speed]", '', :value => row[9] %></td>
			<td><%= text_field_tag "row[#{a}][fan_speed]", '', :value => row[10] %></td>
			<td><%= text_field_tag "row[#{a}][motor_power]", '', :value => row[11] %></td>
			<td><%= text_field_tag "row[#{a}][motor_pole]", '', :value => row[12] %></td>
			<td><%= text_field_tag "row[#{a}][air_flow]", '', :value => row[13] %></td>
			<td><%= text_field_tag "row[#{a}][static_pressure]", '', :value => row[14] %></td>
			<td><%= text_field_tag "row[#{a}][other]", '', :value => row[15] %></td>
			<td><%= text_field_tag "row[#{a}][remark]", '', :value => row[16] %></td>
		</tr>
		<% end %> <!-- end of each -->
	</tbody>
</table>

<% end %>   <!-- end of form for -->