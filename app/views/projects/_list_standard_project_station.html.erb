
<%= simple_form_for @standard_station do |f| %>
<%= f.input "project_id",:label => false, :input_html => { :value => params[:id]} %>
<table class="table">
	<thead>
	<tr>
		<th><%#= check_box_tag 'checkall', :id =>"checkall" %></th>
		<th><%= submit_tag "Submit Station" , :class=>"btn" %></th>
		<th>No</th>
		<th>Name</th>
		<th></th>
	</tr>
	</thead>
	
	<tbody>
		<% list_standard_stations.stations.each_with_index do |station , index| %>
		<tr>
			<td></td>
			<td><%= check_box_tag 'station_ids[]', station.id %></td>
			<td><%= index + 1 %></td>
			<td><%= station.name %></td>
			<td><%= f.input :name , :label => false , :id => "" %></td>
		</tr>
	</tbody>
	<% end %> <!-- form tag each do -->
	
</table>
	<%#= submit_tag "Submit Station" , :class=>"button" %>

<% end %> <!-- simple form end -->

