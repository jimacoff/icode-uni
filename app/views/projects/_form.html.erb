<%= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <%#= f.text_field :testing , :value =>"123" %>
  <%= f.input :name , :label => "Project Name" %>
  <%= f.input :project_code , :label => "Project Code" %>

  <%= f.association :client, collection: Client.all ,include_blank: true, input_html: { class: 'chosen-select' }  %>

  <br>

  <div class="dp2 date">
    <%= f.input :date , as: :string , input_html:{ value: Date.today.strftime("%d/%m/%Y")} %><span class="add-on"></span>
  </div>
   <br>
   <br>
  <% if action_name == "edit" %>
      <!-- ***Type Cannot Edit*** -->
  <% else %>
    <%= f.label "Standard" %><%= f.check_box(:standard) %><%#= f.label(:standard, "standard") %>
    <%#= f.check_box(:non_standard) %>
    <%#= f.label(:non_standard, "Non standard") %>
  <% end %>
  <div class="form-actions">
    <%#= f.button :submit , "Customize Project", :class => 'btn-primary' %>
    <%= f.button :submit, "Standard Project" ,:class => 'btn-primary' %>
    <%= link_to t('.back', :default => t("helpers.links.cancel")),
                :back, :class => 'btn' %>
  </div>
<% end %>

<%#= render "js_station" %>

<script type="text/javascript">

$(document).ready(function () {    

  $("input:checkbox").change(function(){
 
    // total allowed to be checked.
    var max_allowed = 1;
    // count how many checked.
    var checked = $("input:checked").size();
    // perform test.
    if ( checked > max_allowed ) {
        // is more than the max so uncheck.
        $(this).attr("checked", false);
        //$(this).
        // display error message.
        //alert("Please select a maximum of " + max_allowed + " options."); 
    } 
  });

 });

</script>

