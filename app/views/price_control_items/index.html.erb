<h3><u>History Price Control Items</u></h3>


<%#= render "listing_price_control" %>
<%#= render :text => params[:price_control_id].to_json %>
<%= render "listing_price_control" %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Material</th>
      <th>Old unit price</th>
      <th>Old eff date</th>
      <th>New unit price</th>
      <th>New eff date</th>
      <!-- <th>Price control</th> -->
      <th></th>
      
    </tr>
  </thead>

  <tbody>
    <% @price_control.price_control_items.each do |price_control_item| %>
      <tr>
        <td><%= price_control_item.material.name rescue'-' %></td>
        <td><%= price_control_item.old_unit_price rescue'-' %></td>
        <td><%= price_control_item.old_eff_date.strftime("%d-%m-%Y") rescue'-' %></td>
        <td><%= price_control_item.new_unit_price %></td>
        <td><%= price_control_item.new_eff_date.strftime("%d-%m-%Y") rescue'-' %></td>
        <!-- <td><%#= price_control_item.price_control_id %></td> -->
        <td><%#= link_to 'Show', price_control_item , :class=>"btn" %>
        <%#= link_to 'Edit', edit_price_control_item_path(price_control_item), :class=>"btn btn-mini btn-info" %>
        <%= link_to 'Destroy', (price_control_item), method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-mini btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back' , price_controls_path , :class=>"btn" %>
<div style="float: right; "><%= link_home_button %></div> 

