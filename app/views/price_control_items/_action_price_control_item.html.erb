<h3><u>History Price Control Items</u></h3>

<% if roles.include?(InventoryManagementSystem::PRICE_CONTROL_ITEM_ADD) %>
  <%= link_to "Add Item Price" , new_price_control_item_path , :class=>"btn", :target => "_blank" %>
<% else %>
  <button class="btn">Add Item Price</button>
<% end %>
<% if roles.include?(InventoryManagementSystem::PRICE_CONTROL_ITEM_ADD) %>
	<a href="#myModal" role="button" class="btn" data-toggle="modal">Add Group Items Price</a>
<% else %>
	<button class="btn">Add Group Item Price</button>
<% end %>

<% if roles.include?(InventoryManagementSystem::PRICE_CONTROL_ITEM_EDIT)  %>
	<%= link_to "Edit Item Price" , edit_price_price_control_items_path , :class => "btn" , :target => "_blank" %>
<% else %>
	<button class="btn">Edit Item Price</button>
<% end %>
<div style="float: right; ">
<%= link_to 'Back' , price_controls_path , :class=>"btn" %>
<%= link_home_button %>
</div>

<hr>

<div style="float: left;">
  <div>
    <%= search_form_for @price_control_search do |f| %> 
      <%= f.text_field :material_material_code_start , :class => "input-medium search-query", :placeholder => "Raw - material code" %>
      <%= f.submit "Search", :class => "btn"%>
    <% end %>
  </div>
</div>


<div style="float: right;"><%= will_paginate @price_control_item, :class => "pagination" %></div>



<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Select an Option</h3>
  </div>
  <div class="modal-body">
    <button class="btn"><%= link_to "Add Raw Material Price", add_raw_group_price_price_control_items_path %></button> | 
    <button class="btn"><%= link_to "Add Fitting Material Price", add_fitting_group_price_price_control_items_path %></button>
  </div>
