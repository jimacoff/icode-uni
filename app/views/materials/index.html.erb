<%- model_class = Material -%> 
<div class="page-header">
  <h3><u>Listing Materials</u><%#=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
</div>
<div style="float: right; "><%= link_home_button %></div>

<!-- <input class="append_row" type="button" onclick="javascript:appendRow()" value="Add row"></input>
 -->



<div>
  <% if roles.include?(InventoryManagementSystem::MATERIAL_ADD) %>
  <%= link_to "New Material" , new_material_path , :class=>"btn btn-primary" %>
  <% else %>
  <button type="button" class="btn">New Material</button>            
  <% end %>
</div>
<br>
<!-- <table class="table table-striped " , id="my_table "> -->

<div style="float: left;">
<%= search_form_for @search do |f| %> 
  <%#= f.text_field :username_cont, :class => "input-medium search-query", :placeholder => "Username", autocomplete: true %>
  <%= f.text_field :name_cont, "data-autocomplete" => autocomplete_material_name_materials_path, :class => "input-medium search-query", :placeholder => "Name" %>
  <%= f.submit "Search", :class => "btn" %>
<% end %>
</div>

<div style="float: right;"><%= will_paginate @materials, :class => "pagination" %></div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Material Code (Name/H/W/Wt)</th>
      <th><%= "Dimension H" || model_class.human_attribute_name(:dimension_h) %></th>
      <th><%= "Dimension W" || model_class.human_attribute_name(:dimension_w) %></th>
      <th>WT</th>
      <th><%= model_class.human_attribute_name(:thk_dia) %></th>
      <th>Price</th>
      <%#= model_class.human_attribute_name(:created_at) %>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%#= link_to material.id, material_path(material) %><%= material.id %></td>
        <td><%= material.name %></td>
        <td><%= material.material_code %></td>
        <td><%= material.dimension_h %></td>
        <td><%= material.dimension_w %></td>
        <td><%#= material.total_wt_ibs_ft %><%= material.plate %></td>
        <td><%= material.thk_dia %></td>
        <% a = material.price_control_items.last %>
          <td><%= a.new_unit_price rescue'-'%></td>
        <%# end %>
        <%#=l material.created_at %>
        <td>
          <% if roles.include?(InventoryManagementSystem::MATERIAL_EDIT) %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_material_path(material), :class => 'btn btn-mini' %>
          <% else %>
          <button type="button" class="btn btn-mini">Edit</button>            
          <% end %>             
          <% if roles.include?(InventoryManagementSystem::MATERIAL_DELETE) %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      material_path(material),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% else %>
          <button type="button" class="btn btn-mini">Delete</button>            
          <% end %>            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




