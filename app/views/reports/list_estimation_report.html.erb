<h3>Listing Estimations <%#= station.name rescue'-' %> </h3>

<%#= search_form_for @search do |f| %> 
  
  <%#= f.text_field :title_cont, "data-autocomplete" => autocomplete_estimation_title_estimations_path, :class => "input-medium search-query", :placeholder => "Estimation Title" %>
  <%#= f.submit "Search", :class => "btn"%>
<%# end %>

<div>
  <%= link_home_button %>
<div style="float: right;"><%= will_paginate @list_estimation_report, :class => "pagination" %></div>
</div>
<br><br>
<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Station - Estimation</a></li>
    <li><a href="#tab2" data-toggle="tab">Search Station</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
    
    
      <%= form_tag pdf_estimation_report_reports_path ,:target=>"_blank" ,:method =>"get" do %>
      <% @list_estimation_report.each do |p| %>
        <table>
          <td>Station Name :<u><%= p.name rescue'-'%></u></td>
        </table>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th><%= check_box_tag "checkall", :id => "checkall" %></th>
            <th>Title</th>
            <th>Dimension</th>
            <th>Date</th>
          </tr>
        </thead>

        <tbody>
          <% p.estimations.each do |estimation , index| %>
            <tr>
              <td><%= check_box_tag "estimation_ids[]" , estimation.id %></td>
              <td><%= estimation.title rescue'-' %></td>
              <td><%= estimation.dimension rescue'-'%></td>
              <td><%= estimation.date rescue'-'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% end %>

      <%= submit_tag "Show", :class=>"btn" %>
      <%= submit_tag "PDF Report", :class=>"btn" %>
      <% end %>
      <br>
      <br>
      <%= link_to 'Back', stations_path , :class=>"btn" %>
    </div>

    <div class="tab-pane" id="tab2">
          <p><%= render "action_search_report" %></p>
        </div>
      </div>
    </div>