			<td>
	        </td>	
			<td><%#= item_list. %></td>
			<td><%#= item_list. %></td>	
			<td rowspan="<%= estimation.estimation_item.count - 29  %>">
			<%#= estimation_remarks[index] %>
				<%#= my_helper(estimation)[index] %></td>

	</tr>			

		<% counter = 1 %>

		<% end %> <!-- counter -->	
	<% end %> <!-- second each do -->

	<tr>
